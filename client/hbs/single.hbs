<html>
	{{> head.hbs}}
	<body>
		{{> header.hbs}}
		<content-row>
			<main>
				<div class="single">
				{{#if about}}
					{{> about.hbs}}
				{{/if}}
				{{#if contact}}
					{{> contact.hbs}}
				{{/if}}
				{{#if fourohfour}}
					{{> not-found.hbs}}
				{{/if}}
				</div>
			</main>
			<aside>
				{{#each (sidebar)}}
				<article>
					<h1>{{title}}</h1>
					{{content}}
				</article>
				{{/each}}
				<article>
					<h1>Tags</h1>
					{{#each (tags)}}
						{{tag this}}
					{{/each}}
				</article>
			</aside>
		</content-row>
	</body>
</html>
